@model MovieTheaterSYS.Models.ViewModels.MovieEditVM

@{
    ViewData["Title"] = "Edit Movie";
}

<div class="container">
    <h1>Edit Movie</h1>
    <hr />

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- NAME -->
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- DESCRIPTION -->
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <!-- PRICE -->
        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" type="number" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <!-- MAIN IMAGE -->
        <div class="form-group">
            <label>Main Image</label>
            <input name="img" type="file" class="form-control" />

            @if (!string.IsNullOrEmpty(Model.MainImg))
            {
                <img src="~/uploads/movies/@Model.MainImg"
                     style="width:150px;height:auto;margin-top:10px;" />
            }
        </div>

        <!-- SUB IMAGES -->
        <div class="form-group">
            <label>Sub Images</label>
            <input name="subimgs" type="file" multiple class="form-control" />

            @if (Model.SubImages != null && Model.SubImages.Count > 0)
            {
                <p class="mt-2">Existing Sub Images:</p>

                <div class="d-flex flex-row flex-wrap">
                    @foreach (var subimg in Model.SubImages)
                    {
                        <div class="position-relative m-2" style="width:150px;">
                            <a asp-action="DeleteSubImg" asp-route-id="@subimg.Id"
                               class="btn btn-danger btn-sm position-absolute"
                               style="top:0;right:0;">X</a>

                            <img src="~/uploads/movies/subimgs/@subimg.Img"
                                 style="width:150px;height:auto;border-radius:5px;" />
                        </div>
                    }
                </div>
            }
        </div>

        <!-- DATE -->
        <div class="form-group">
            <label asp-for="Date"></label>
            <input asp-for="Date" class="form-control" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>

        <!-- STATUS -->
        <div class="form-group form-check mt-2">
            <input class="form-check-input" asp-for="status" />
            <label class="form-check-label" asp-for="status"></label>
        </div>

        <!-- CATEGORY -->
        <div class="form-group">
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" class="form-control">
                @foreach (var category in Model.Categories)
                {
                    <option value="@category.Id"
                            selected="@(category.Id == Model.CategoryId)">
                        @category.Name
                    </option>
                }
            </select>
        </div>

        <!-- CINEMA -->
        <div class="form-group">
            <label asp-for="CinemaId"></label>
            <select asp-for="CinemaId" class="form-control">
                @foreach (var cinema in Model.Cinemas)
                {
                    <option value="@cinema.Id"
                            selected="@(cinema.Id == Model.CinemaId)">
                        @cinema.Name
                    </option>
                }
            </select>
        </div>

        <!-- ACTORS (SELECT2) -->
        <div class="form-group mt-3">
            <label>Select Actors</label>

            <select asp-for="SelectedActorIds"
                    multiple
                    class="form-select"
                    id="actorSelect">

                @foreach (var actor in Model.Actors)
                {
                    <option value="@actor.Id" >
                            @(Model.SelectedActorIds.Contains(actor.Id) ? "selected" : "")
                        @actor.Name
                    </option>
                }
            </select>

            <p class="mt-2">Already Selected:</p>
            @foreach (var actor in Model.CurrentActors)
            {
                <span class="badge bg-info text-white m-1">@actor.Name</span>
            }
        </div>

        <!-- SUBMIT -->
        <div class="form-group mt-3">
            <input type="submit" value="Save Changes" class="btn btn-primary" />
        </div>

    </form>

    <a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        $(document).ready(function () {
            $('#actorSelect').select2({
                placeholder: "Select actors",
                width: '100%'
            });
        });
    </script>
}
