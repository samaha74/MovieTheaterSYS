@model MovieTheaterSYS.Models.ViewModels.LoginVM

@{
    ViewData["Title"] = "LogIn";
}

<div class="container">
    <h1>LogIn</h1>

    <h4>LoginVM</h4>

    <hr />

        <div class="row">
            <div class="col-md-12">
                <form asp-action="LogIn">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                    <label asp-for="UserNameOrEmail" class="control-label">UserNameOrEmail</label>
                        <input asp-for="UserNameOrEmail" class="form-control" />
                        <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                    <label asp-for="Password" class="control-label">Password</label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                    <label asp-for="RememberMe" class="control-label">
                        
                        <input asp-for="RememberMe" class="form-check-input" />Remember Me

                    </label>
                        <span asp-validation-for="RememberMe" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Login" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>


    <div>
        <a asp-action="Register">Register</a>
    </div>
    <div>
        <a asp-action="ForgetPassword">Forget Password?</a>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
